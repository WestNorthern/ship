<!DOCTYPE html>
<html>
  <head>
    <title>Ship</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

		<ul id="user-dropdown" class="dropdown-content">
			<li class="divider"></li>
			<li><%= link_to "My Profile", current_user %></li>
			<li class="divider"></li>
			<li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
		  <li class="divider"></li>
		  <li><%= link_to "Create New Boat", new_boat_path %></li>
		  <li class="divider"></li>
		  <li><%= link_to "Create New Job", new_job_path %></li>
		  <li class="divider"></li>

		  <li class="divider"></li>
		</ul>
	  <div class="navbar-fixed">
		  <nav class="red accent-2" >
		    <div class="nav-wrapper">
		      <div class="row">
		        <div class="col s2">
		          <ul class="left">
		          <li><a href="#">Ship</a></li>
		          </ul>
		        </div>
		        <div class="col s3">
		        </div>
		        <div class="col s7">
		          <ul class="right">
		            <% if user_signed_in? %>
		      				<li>
		      					<a class="dropdown-button user-hub" href="#!" data-activates="user-dropdown" style="min-width: 130px;" data-beloworigin="true">
		      						<%= current_user.full_name %>
		      
		      						<i class="material-icons right">arrow_drop_down</i>
		      					</a>
		      					<li> <%= link_to "User Index", users_path %></li>
		      					<li> <%= link_to "Boats Index", boats_path %></li>
		      					<li> <%= link_to "Jobs Index", jobs_path %></li>
		      					<li><%= link_to "BJs", boat_jobs_path %></li>
		      				</li>
	        			<% else %>
	        				<li><%= link_to "Log In", new_user_session_path %></li>
	        				<li><%= link_to "Sign Up", new_user_registration_path %></li>
	        			<% end %>
		          </ul>
		        </div>
		      </div>
		    </div>
		  </nav>
		</div>
  	<div class="container">

  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>

    <script>
    	$(function(){
				$(".dropdown-button").dropdown({ hover: false });
				$(".button-collapse").sideNav();
			});
    </script>
  </body>
</html>
