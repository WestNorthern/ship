<h1>This is the User Index</h1>


<div class="users">
	
	<% @users.all.each do |user| %>

		<div class="user">
			<div class="card small">
    <div class="card-image waves-effect waves-block waves-light">
      <%= image_tag user.avatar.url, :class => 'activator' %>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= user.full_name %><i class="material-icons right">more_vert</i></span>
      <p><a href="#">This is a link</a></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><%= user.full_name %><i class="material-icons right">close</i></span>
      <p><%= user.email %></p>
      <%= link_to "#{user.first_name}'s Profile", user %>
    </div>
  </div>
	
		</div>


	<% end %>

</div>