
<h1>Available Boats</h1>

<table class="boats-table responsive-table highlight">
  <thead>
    <tr>
        <th>Boat Name</th>
        <th>Capacity</th>
        <th>Current Location</th>
        <th>Owner</th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
    <tr class="boat-row i-couldnt-help-it">
      <td><%= link_to "#{boat.name}", boat %></td>
      <td>Capacity: <%= boat.capacity %></td>
      <td>Current Location: <%= boat.location %></td>
      <td><%= link_to "#{boat.user.full_name}", boat.user %></td>
    </tr>
    <% end %>
    
  </tbody>
</table>

<br>
<br>
<hr>
<hr>


<div class="boats">
	
	<% @boats.all.each do |boat| %>

		<div class="boat">
			<div class="card small">
    		<div class="card-image waves-effect waves-block waves-light">
      		<%= image_tag boat.avatar.url, :class => 'activator' %>
    		</div>
    		<div class="card-content">
      		<span class="card-title activator grey-text text-darken-4"><%= boat.name %><i class="material-icons right">more_vert</i></span>
      		<p><%= link_to "#{boat.name} Profile", boat %></p>
    		</div>
    		<div class="card-reveal">
      		<span class="card-title grey-text text-darken-4"><%= boat.name %><i class="material-icons right">close</i></span>
		      <p>Current Locaton: <%= boat.location %></p>
		      <p>Max Capacity: <%= boat.capacity %></p>
		      <p>Port of Origin: <%= boat.home_port %></p>
		      <p>Owner: <%= boat.user.full_name %></p>
		      <%= link_to "#{boat.user.first_name}'s Profile", boat.user %>
    		</div>
  		</div>
		</div>

	<% end %>

</div>

<script>
$(document).ready(function() {
  $('select').material_select();
});
</script>

